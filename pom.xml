<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.3.4.RELEASE</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.miniso.boot</groupId>
    <artifactId>boot-infra</artifactId>
    <version>1.2.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <dubbo.version>2.7.8</dubbo.version>
        <miniso-boot-version>1.2.0-SNAPSHOT</miniso-boot-version>
    </properties>

    <modules>
        <module>miniso-boot-client</module>
        <module>miniso-boot-autoconfiguration</module>
        <module>miniso-boot-xxl-job-autoconfiguration</module>
        <module>miniso-boot-common</module>
        <module>miniso-boot-apollo-autoconfiguration</module>
        <module>miniso-boot-dubbo-mockito</module>
<!--        <module>miniso-boot-loghub</module>-->
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.dubbo</groupId>
                <artifactId>dubbo</artifactId>
                <version>2.7.8</version>
            </dependency>
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>fastjson</artifactId>
                <version>1.2.73</version>
            </dependency>

            <dependency>
                <groupId>com.miniso.boot</groupId>
                <artifactId>miniso-boot-autoconfiguration</artifactId>
                <version>${miniso-boot-version}</version>
            </dependency>
            <dependency>
                <groupId>com.miniso.boot</groupId>
                <artifactId>miniso-boot-apollo-autoconfiguration</artifactId>
                <version>${miniso-boot-version}</version>
            </dependency>
            <dependency>
                <groupId>com.miniso.boot</groupId>
                <artifactId>miniso-boot-xxl-job-autoconfiguration</artifactId>
                <version>${miniso-boot-version}</version>
            </dependency>
            <dependency>
                <groupId>com.miniso.boot</groupId>
                <artifactId>miniso-boot-dubbo-mockito</artifactId>
                <version>${miniso-boot-version}</version>
            </dependency>
            <dependency>
                <groupId>com.miniso.boot</groupId>
                <artifactId>miniso-boot-common</artifactId>
                <version>${miniso-boot-version}</version>
            </dependency>
            <dependency>
                <groupId>com.miniso.boot</groupId>
                <artifactId>miniso-boot-client</artifactId>
                <version>${miniso-boot-version}</version>
            </dependency>
            <dependency>
                <groupId>com.miniso.boot</groupId>
                <artifactId>miniso-loghub</artifactId>
                <version>${miniso-boot-version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <distributionManagement>
        <repository>
            <id>releases</id>
            <name>Nexus Release Repository</name>
            <url>http://13.76.250.64:8081/repository/releases/</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <name>Nexus Snapshot Repository</name>
            <url>http://13.76.250.64:8081/repository/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>public-proxy</id>
            <url>http://13.76.250.64:8081/repository/public/</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <!--   要将源码放上去，需要加入这个插件    -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <attach>true</attach>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
